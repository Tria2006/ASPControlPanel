@model DBModels.Models.ProductParameter

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Параметр продукта</h4>
    <div class="row" style="margin-top: 20px">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="width: 150px"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataType" class="control-label"></label>
                    <select asp-for="DataType" asp-items="Html.GetEnumSelectList<DataTypes>()" style="margin-left: 5px"></select>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="IsRequiredForCalc" class="control-label"></label>
                            <input asp-for="IsRequiredForCalc" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="IsRequiredForSave" class="control-label"></label>
                            <input asp-for="IsRequiredForSave" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" min="0" type="number" style="width: 60px; text-align: right" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="GroupId" class="control-label"></label>
                        <select asp-for="GroupId" asp-items="@ViewData["ParamGroups"] as SelectList"></select>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-default" />
                    <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить и выйти" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
