@model IGSLControlPanel.Models.ProductParameter

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Параметр продукта</h4>
    <div class="row" style="margin-top: 20px">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="font-weight: normal">
                        Тип данных <select asp-for="DataType" asp-items="Html.GetEnumSelectList<DataTypes>()" style="margin-left: 5px"></select>
                    </label>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsRequiredForCalc" /> Обязателен для расчета
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsRequiredForSave" /> Обязателен для сохранения
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label>
                            Порядковый номер в списке <input asp-for="Order" min="1" type="number" style="width: 60px; text-align: right" />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-default" />
                    <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить и выйти" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
