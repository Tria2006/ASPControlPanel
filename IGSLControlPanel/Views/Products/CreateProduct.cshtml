@using IGSLControlPanel.Models
@model Product

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Новый продукт</title>
</head>
<body>
    <div class="row">
        <form asp-action="CreateProduct" style="min-width: 700px; margin-bottom: 70px; margin-top: 30px">
            <input asp-for="FolderId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 600px">
                <label class="control-label">Название продукта</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="width: 150px">Действителен с</label>
                <input asp-for="ValidFrom" type="date" id="validFromDt">
                <span asp-validation-for="ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="width: 150px">Действителен по</label>
                <input asp-for="ValidTo" type="date" id="validToDt" />
                <span asp-validation-for="ValidTo" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label">Параметры продукта</label>
            </div>
            @{
                var groupsList = ViewData["ParamGroups"] as SelectList;
            }
            @if (groupsList != null)
            {
                foreach (var p in groupsList)
                {
                    if (Model.LinkToProductParameters.All(x => x.Parameter.GroupId != Guid.Parse(p.Value)))
                    {
                        continue;
                    }
                    <div>
                        @Html.DisplayFor(x => p.Text)
                    </div>

                    <a asp-controller="ProductParameters" asp-action="Create">
                        <img src="~/images/Icons/add_param.png" alt="Добавить параметр" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                    </a>
                    <a id="@p.Value" onclick="ParameterUpClick(this)">
                        <img src="~/images/Icons/arrow-up.png" alt="Параметр вверх" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                    </a>
                    <a id="@p.Value" onclick="ParameterDownClick(this)">
                        <img src="~/images/Icons/arrow-down.png" alt="Параметр вниз" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                    </a>

                    <div id="@p.Value-partial">
                        @await Html.PartialAsync("_ProductParametersBlock", Model.LinkToProductParameters.Where(x => x.Parameter.GroupId == Guid.Parse(p.Value)).Select(s => s.Parameter).OrderBy(x => x.Order).ToList())
                    </div>
                }
            }

            @if (Model.LinkToProductParameters.Any(x => x.Parameter.GroupId == null))
            {
                <div>
                    <label>Параметры без группы</label>
                </div>

                <a asp-controller="ProductParameters" asp-action="Create">
                    <img src="~/images/Icons/add_param.png" alt="Добавить параметр" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>
                <a onclick="ParameterUpClick(this)">
                    <img src="~/images/Icons/arrow-up.png" alt="Параметр вверх" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>
                <a onclick="ParameterDownClick(this)">
                    <img src="~/images/Icons/arrow-down.png" alt="Параметр вниз" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>

                <div id="partialNoGroup">
                    @await Html.PartialAsync("_ProductParametersBlock", Model.LinkToProductParameters.Where(x => x.Parameter.GroupId == null).Select(s => s.Parameter).OrderBy(x => x.Order).ToList())
                </div>
            }

            @if (!Model.LinkToProductParameters.Any())
            {
                <div>
                    <label>Параметры без группы</label>
                </div>

                <a asp-controller="ProductParameters" asp-action="Create">
                    <img src="~/images/Icons/add_param.png" alt="Добавить параметр" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>
                <a onclick="ParameterUpClick(this)">
                    <img src="~/images/Icons/arrow-up.png" alt="Параметр вверх" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>
                <a onclick="ParameterDownClick(this)">
                    <img src="~/images/Icons/arrow-down.png" alt="Параметр вниз" style="margin-bottom: 5px; margin-top: 10px; width: 30px; height: 30px" />
                </a>

                <div id="partialNoGroup">
                    @await Html.PartialAsync("_ProductParametersBlock", new List<ProductParameter>())
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-default" />
                <button class="btn btn-default" asp-controller="Products" asp-action="Index" asp-route-id="@Model.FolderId">Отменить и выйти</button>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    function ParameterUpClick(link) {
        $.ajax({
            url: "/ProductParameters/ParameterUp",
            type: "post",
            data: { groupId: link.id },
            success: function (result) {
                if (link.id !== '') {
                    $("#" + link.id + "-partial").html(result);
                } else {
                    $("#partialNoGroup").html(result);
                }
            }
        });
    };
    function ParameterDownClick(link) {
        $.ajax({
            url: "/ProductParameters/ParameterDown",
            type: "post",
            data: { groupId: link.id },
            success: function (result) {
                if (link.id !== '') {
                    $("#" + link.id + "-partial").html(result);
                } else {
                    $("#partialNoGroup").html(result);
                }
            }
        });
    };
</script>
