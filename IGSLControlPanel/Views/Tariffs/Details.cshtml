@model DBModels.Models.Tariff

@{
    ViewData["Title"] = "Данные тарифа";
    ViewData["ReadOnly"] = true;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css.map" />
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
</head>

<h2>Данные тарифа</h2>
<div>
    <div class="form-group" style="width: 600px">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" disabled="disabled" />
    </div>
    <div class="form-group">
        <label asp-for="ValidFrom" class="control-label"></label>
        <input asp-for="ValidFrom" class="form-control" disabled="disabled" style="width: 160px" />
    </div>
    <div class="form-group">
        <label asp-for="ValidTo" class="control-label"></label>
        <input asp-for="ValidTo" class="form-control" disabled="disabled" style="width: 160px" />
    </div>
    <div class="form-group">
        <label asp-for="BaseTariffType" class="control-label"></label>
        <select asp-for="BaseTariffType" asp-items="Html.GetEnumSelectList<BaseTariffTypes>()" disabled="disabled" class="form-control" style="width: 250px"></select>
        <span asp-validation-for="BaseTariffType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BaseTariffValue" class="control-label"></label>
        <input asp-for="BaseTariffValue" class="form-control" style="width: 100px" disabled="disabled" />
        <span asp-validation-for="BaseTariffValue" class="text-danger"></span>
    </div>

    <h3>Правила страхования</h3>
    @await Html.PartialAsync("_InsuranceRulesBlock", Model.InsRuleTariffLink, ViewData)

    <h3>Факторы риска</h3>
    @await Html.PartialAsync("_RiskFactorsBlock", Model.RiskFactorsTariffLinks, ViewData)

    <div class="form-group" style="margin-top: 50px">
        <button class="btn btn-default" style="width: 200px" onclick="GoBack()">Закрыть</button>
    </div>
</div>