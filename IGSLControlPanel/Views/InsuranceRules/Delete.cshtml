@model DBModels.Models.InsuranceRule

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3>Вы действительно хотите удалить это правило страхования?</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" disabled="disabled" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    @{
        var counter = 1;
        var links = Model.LinksToRisks.Where(x => !x.Risk.IsDeleted).ToList();
    }
    <h4>
        Риски
    </h4>
    @if (links.Count == 0)
    {
        <div style="border: lightgrey groove thin; border-radius: 3px; box-shadow: 3px 3px 5px darkgrey; padding: 10px">
            <label>Нет рисков</label>
        </div>
    }
    else
    {
        foreach (var link in links)
        {
            <div style="width: 100%; height: 40px; border: 1px lightgrey solid; background: lavender; padding-left: 10px; padding-right: 10px; position: relative">
                <div style="float: left; position: absolute; top: 9px;">
                    <label style="margin-right: 10px">@counter.</label>
                    <label>@link.Risk.Name</label>
                </div>
            </div>
            counter++;
        }
    }
</div>

        <form asp-action="RemoveRuleConfirmed">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-default" />
            <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить удаление" />
        </form>
</body>
</html>

<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>