@model DBModels.Models.ParameterGroup

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Новая группа</title>
</head>
<body>

<h4>Новая группа параметров</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="min-width: 700px; margin-bottom: 70px; margin-top: 30px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
                <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить и выйти" />
            </div>
        </form>
    </div>
</div>

</body>
</html>
<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
