@model DBModels.Models.ParameterGroup

@{
    ViewData["Title"] = "Новая группа";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" />
</head>
<body>

    <h4>Новая группа параметров</h4>
    <form asp-action="Create" class="create_update_form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CanRepeat" class="control-label" style="width: 220px"></label>
            <input asp-for="CanRepeat" style="vertical-align: top" />
        </div>
        <div class="form-group">
            <label asp-for="IsGlobal" class="control-label" style="width: 220px"></label>
            <input asp-for="IsGlobal" style="vertical-align: top" />
        </div>
        <div class="form-group" style="margin-top: 50px">
            <input type="submit" value="Создать" name="create" class="btn btn-default" />
            <input type="submit" value="Создать и выйти" name="createAndExit" class="btn btn-default" />
            <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить и выйти" />
        </div>
    </form>

</body>
</html>
<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
