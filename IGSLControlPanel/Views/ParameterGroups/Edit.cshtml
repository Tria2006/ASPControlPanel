@model DBModels.Models.ParameterGroup

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование группы</title>
</head>
<body>

    <h4>Группа параметров</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" style="width: 500px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить изменения" class="btn btn-default" />
                    <input type="button" class="btn btn-default" onclick="GoBack()" value="Выйти без сохранения" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
