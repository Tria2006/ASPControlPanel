@model DBModels.Models.ParameterGroup

@{
    ViewData["Title"] = "Удаление группы";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <h3>Вы действительно хотите удалить эту группу?</h3>
    <hr />
    <div>
        <h4>Группа параметров</h4>
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" disabled="disabled" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CanRepeat" class="control-label" style="width: 220px"></label>
                    <input id="calcRequired" asp-for="CanRepeat" style="vertical-align: top" disabled="disabled" />
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-default" />
            <input type="button" class="btn btn-default" onclick="GoBack()" value="Отменить и выйти" />
        </form>
    </div>
</body>
</html>

<script>
    function GoBack() {
        javascript: history.go(-1);
    }
</script>
